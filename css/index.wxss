* {
  margin: 0;
  padding: 0;
}
.container {
  width: 500px;
  height: 400px;
  margin: auto;
  position: relative;
  overflow: hidden;
}
.container .carousel {
  width: 100%;
  height: 100%;
  display: flex;
  transition: 0.6s;
}
.container .carousel img {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.container .indicator {
  margin-left: 50%;
  transform: translateX(-50%);
  display: flex;
  position: absolute;
  bottom: 20px;
}
.container .indicator span {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  margin: 0 5px;
  border: 1px solid #666;
  display: inline-block;
  cursor: pointer;
}
.container .indicator span.active {
  background: red;
  transition: .6s;
}
.container .arrow {
  font-size: 24px;
  position: absolute;
  transform: translateY(-50%);
  top: 50%;
  width: 100%;
  user-select: none;
}
.container .arrow .left {
  width: 40px;
  height: 40px;
  line-height: 40px;
  border-radius: 50%;
  overflow: hidden;
  background: #fff;
  text-align: center;
  left: 20px;
  cursor: pointer;
}
.container .arrow .left:hover {
  opacity: 0.8;
}
.container .arrow .right {
  width: 40px;
  height: 40px;
  line-height: 40px;
  border-radius: 50%;
  overflow: hidden;
  background: #fff;
  text-align: center;
  margin-left: auto;
  cursor: pointer;
  right: 20px;
}
.container .arrow .right:hover {
  opacity: 0.8;
}
